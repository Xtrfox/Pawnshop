angular.module('Pawn.directives')
  .directive('addItemForm', function() {
    return {
      restrict: 'E',
      scope: false,
      templateUrl: '<%= asset_path("shared/_addItemForm.html") %>',
      link: function($scope){
        $scope.items=[{id:1}];

        $scope.addNewItem= function(){
          var newItem = $scope.items.length+1;
          console.log(newItem);
          $scope.items.push({'id': newItem});
        };
      }
    }
});
